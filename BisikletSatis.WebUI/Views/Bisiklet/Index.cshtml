@model BicycleDetailViewModel
@{
    ViewData["Title"] = Model.Bisiklet.Marka.Adi + " " + Model.Bisiklet.Modeli + " " + Model.Bisiklet.BisikletTipi;
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="/Img/Bicycles/@Model.Bisiklet.Resim1" alt="..."></div>
            <div class="col-md-6">
                <div class="small mb-1"></div>
                <h1 class="display-5 fw-bolder">@ViewData["Title"]</h1>
                <div class="fs-5 ">
                    <span>Fiyatı : @Model.Bisiklet.Fiyati ₺</span>
                </div>
                <div class="fs-5 ">
                    <span>Renk : @Model.Bisiklet.Renk ₺</span>
                </div>
                <div class="fs-5 ">
                    <span>Model Yılı : @Model.Bisiklet.ModelYili</span>
                </div>
                <p class="lead">
                    @Model.Bisiklet.Notlar
                </p>
                <div class="d-flex">
                    <button class="btn btn-outline-dark flex-shrink-0" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <i class="bi-cart-fill me-1"></i>
                        Detaylı Bilgi ve İletişim İçin Lütfen Arayın
                        <br /> 0850 1907 0667
                    </button>
                    
                </div>
            </div>
        </div>
    </div>
</section>
<div style="margin-bottom:100px;"></div>

<!-- Modal -->

<partial name="Musteri" model="Model.Musteri" />
