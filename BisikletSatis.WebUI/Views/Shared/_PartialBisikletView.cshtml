@model IEnumerable<Bisiklet>

@foreach (var item in Model)
{
    <div class="col mb-5">
        <div class="card h-100">
            <div class="badge position-absolute" style="top: 0.2rem; right:0.2rem;">
                <form action="/Favorites/Add" method="post">
                    <input type="hidden" name="bisikletId"
                           value="@item.Id" />
                    <button type="submit" class="btn btn-outline-dark ">
                        <i class="bi bi-heart"></i>
                    </button>
                </form>
            </div>
            <!-- Product image-->
            <img class="card-img-top" src="/Img/Bicycles/@item.Resim1" alt="...">
            <!-- Product details-->
            <div class="card-body p-4">
                <div class="text-center">
                    <!-- Product name-->
                    <h5 class="fw-bolder">@item.Marka.Adi @item.Modeli @item.BisikletTipi</h5>
                    <!-- Product price-->
                    @item.Fiyati.ToString("c")
                </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <div class="text-center">
                    <a class="btn btn-outline-dark mt-auto" href="/Bisiklet/Index/@item.Id">İncele</a>
                </div>
                <div class="d-flex justify-content-center mt-2">
                </div>
            </div>
        </div>
    </div>
}

