@model BisikletSatis.Entities.Satis

@{
    ViewData["Title"] = "Sil";
}

<h1>Sil</h1>

<h3>Silmek istiyor musunuz?</h3>
<div>
    <h4>Satış</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SatisFiyati)
        </dt>
        <dd class = "col-sm-10">
            @Model.SatisFiyati.ToString("c")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SatisTarihi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SatisTarihi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bisiklet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bisiklet.BisikletBilgi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Musteri)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Musteri.AdSoyad)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil"
               class="btn"
               style="background-color:#B22222; border-color:#8B0000; color:#fff;" />
        <a asp-action="Index" style="color:#000; text-decoration:none;">Listeye Dön</a>
    </form>
</div>
