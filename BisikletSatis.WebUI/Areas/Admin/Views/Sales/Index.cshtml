@model IEnumerable<BisikletSatis.Entities.Satis>

@{
    ViewData["Title"] = "Satışlar";
}

<h1>Satışlar</h1>

<p>
    <a class="btn btn-outline-dark" asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SatisFiyati)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SatisTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bisiklet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musteri)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.SatisFiyati.ToString("c")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SatisTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bisiklet.BisikletBilgi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Musteri.AdSoyad)
                </td>
                <td>
                    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a class="btn" style="background-color:#B22222; border-color:#8B0000; color:#fff;"
                       asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
